<?xml version="1.0" encoding="UTF-8" ?>
<maui:ShinyShell x:Class="Sample.AppShell"
                 xmlns:maui="clr-namespace:Shiny.Applications.Maui;assembly=Shiny.Applications.Maui"
                 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:local="clr-namespace:Sample"
                 Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Main"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="Main" />

    <ShellContent Title="Other"
                  ContentTemplate="{DataTemplate local:OtherPage}"
                  Route="Other" />
</maui:ShinyShell>